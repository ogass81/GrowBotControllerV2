<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="@dimen/fragment_margin">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID" />

        <TextView
            android:id="@+id/value_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/label_id"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/label_id" />

        <EditText
            android:id="@+id/value_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/label_id"
            android:inputType="textPersonName"
            android:text="Name" />

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/value_title"
            android:layout_marginTop="10dp"
            android:background="#c0c0c0" />

        <TextView
            android:id="@+id/label_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:text="Rules" />

        <LinearLayout
            android:id="@+id/value_rules"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/label_rules"
            android:orientation="vertical"></LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/value_rules"
            android:layout_marginTop="10dp"
            android:background="#c0c0c0" />

        <TextView
            android:id="@+id/label_sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:text="Sequence" />

        <LinearLayout
            android:id="@+id/value_sequence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/label_sequence"
            android:orientation="vertical"></LinearLayout>


        <View
            android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/value_sequence"
            android:layout_marginTop="10dp"
            android:background="#c0c0c0" />

        <Switch
            android:id="@+id/value_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line3"
            android:text="Current State" />
        <View
            android:id="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/value_state"
            android:layout_marginTop="10dp"
            android:background="#c0c0c0" />

        <Switch
            android:id="@+id/value_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line4"
            android:text="Active" />

        <View
            android:id="@+id/line5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/value_active"
            android:layout_marginTop="10dp"
            android:background="#c0c0c0" />


        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/line5"
            android:text="Save" />

        <TextView
            android:id="@+id/server_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button_save" />

        <ProgressBar
            android:id="@+id/loadingbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>
