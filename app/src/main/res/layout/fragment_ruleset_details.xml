<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID" />

    <TextView
        android:id="@+id/value_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/label_id"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/label_id" />

    <EditText
        android:id="@+id/value_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/label_id"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value_title"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/label_Rule1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:text="Rule 1" />

    <Spinner
        android:id="@+id/value_trigger1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_Rule1"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp" />

    <Spinner
        android:id="@+id/value_boolop1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_Rule1"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/value_trigger1" />
    <TextView
        android:id="@+id/label_Rule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_trigger1"
        android:text="Rule 2" />

    <Spinner
        android:id="@+id/value_trigger2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_Rule2"
        android:layout_marginStart="9dp" />

    <Spinner
        android:id="@+id/value_boolop2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_Rule2"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/value_trigger2" />
    <TextView
        android:id="@+id/label_Rule3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_trigger2"
        android:text="Rule 2" />
    <Spinner
        android:id="@+id/value_trigger3"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_Rule3"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value_trigger3"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />
    <TextView
        android:id="@+id/label_actionchain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:text="Sequence" />

    <Spinner
        android:id="@+id/value_actionchain"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_actionchain"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp" />
    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value_actionchain"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />

    <Switch
        android:id="@+id/value_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line3"
        android:text="Active" />

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value_active"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />


    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/line4"
        android:text="Save" />

    <TextView
        android:id="@+id/server_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>


