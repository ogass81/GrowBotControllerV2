<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/leaf_background_02"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo_darkgreen_crop" />

    <TextView
        android:id="@+id/label_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo"
        android:paddingTop="4dp"
        android:text="Connected to"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorHeader"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/value_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/label_ip"
        android:layout_toRightOf="@id/label_ip"
        android:paddingLeft="6dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorHeader"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/label_task_frq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/label_ip"
        android:paddingTop="4dp"
        android:text="Firmware Version"
        android:textColor="@color/colorHeader"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/value_task_frq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/label_task_frq"
        android:layout_toRightOf="@id/label_task_frq"
        android:paddingLeft="6dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorHeader"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/value_compiledate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/value_task_frq"
        android:layout_toRightOf="@id/value_task_frq"
        android:paddingLeft="6dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorHeader"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/value_compiletime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/value_compiledate"
        android:layout_toRightOf="@id/value_compiledate"
        android:paddingLeft="6dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorHeader"
        android:textSize="12sp" />
</RelativeLayout>

